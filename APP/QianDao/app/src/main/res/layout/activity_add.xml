<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#8175A9"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.exemple.hifn123p.qiandao.UI.AddActivity">

    <EditText
        android:id="@+id/contents"
        android:gravity="center"
        android:hint="请输入签到组名称"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ed_key"
        android:layout_alignStart="@+id/ed_key"
        android:layout_above="@+id/ed_key" />

    <EditText
        android:id="@+id/ed_key"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_key"
        android:gravity="center"
        android:layout_above="@+id/get_key"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/get_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
