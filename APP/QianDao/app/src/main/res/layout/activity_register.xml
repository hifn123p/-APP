<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff909458"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="zxing.client.android.RegisterActivity">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">



        <TextView
            android:id="@+id/xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="姓名"
            android:layout_marginBottom="34dp"
            android:layout_above="@+id/xingbie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/tx_xm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/xingming"
            android:layout_toRightOf="@+id/xingming"
            android:layout_toEndOf="@+id/xingming" />


        <TextView
            android:id="@+id/xingbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="性别"
            android:layout_marginBottom="51dp"
            android:layout_above="@+id/tx_dh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:id="@+id/xb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/xingbie"
            android:layout_toRightOf="@+id/xingbie"
            android:orientation="horizontal"
            android:layout_above="@+id/dianhua">

            <RadioButton
                android:id="@+id/nan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_below="@+id/xingming"
                android:layout_toRightOf="@+id/xingbie"
                android:layout_toEndOf="@+id/xingbie" />

            <RadioButton
                android:id="@+id/nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_below="@+id/xingming"
                android:layout_alignRight="@+id/tx_dh"
                android:layout_alignEnd="@+id/tx_dh"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="电话"
            android:layout_alignBaseline="@+id/tx_dh"
            android:layout_alignBottom="@+id/tx_dh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/tx_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="@string/register"
            android:background="@drawable/bg_edittext"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dianhua"
            android:layout_toEndOf="@+id/dianhua" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="密码"
            android:layout_below="@+id/dianhua"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/tx_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/register"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/pass"
            android:layout_toRightOf="@+id/pass"
            android:layout_toEndOf="@+id/pass" />

        <Button

            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="@drawable/yuanjiao"
            android:id="@+id/button3"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/pass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
