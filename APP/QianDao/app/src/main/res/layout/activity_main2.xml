<?xml version="1.0" encoding="utf-8"?>
<com.exemple.hifn123p.qiandao.SlidingMenu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#2B2B2B"
    android:scrollbars="none"
    app:rightPadding="200dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/slidingmenu"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <fragment
            android:id="@+id/id_fragment_title"
            android:name="com.exemple.hifn123p.qiandao.Fragment.TitleBarFragment"
            android:layout_width="fill_parent"
            android:layout_height="50dp" />

            <fragment
            android:id="@+id/id_fragment_content"
            android:name="com.exemple.hifn123p.qiandao.Fragment.SignInFragment"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
                android:layout_weight="1"    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4B4B4B"/>

            <fragment
            android:id="@+id/bottom_bar"
            android:name="com.exemple.hifn123p.qiandao.Fragment.BottomBarFragment"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />

        </LinearLayout>

    </LinearLayout>

</com.exemple.hifn123p.qiandao.SlidingMenu.SlidingMenu>