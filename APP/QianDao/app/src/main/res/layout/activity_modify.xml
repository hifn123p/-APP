<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff909458"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="zxing.client.android.RegisterActivity">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:id="@+id/xiugaimima"
            android:text="密码修改:"
            android:textColor="@android:color/white"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/yuanmima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="原密码"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/xiugaimima"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/tx_ymm"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/yuanmima"
            android:layout_marginLeft="70dp"
            />
        <TextView
            android:id="@+id/xinmima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="新密码"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/yuanmima"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/tx_xmm"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/xinmima"
            android:layout_marginLeft="70dp"
            />
        <Button

            android:layout_centerHorizontal="true"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修改"
            android:background="@drawable/yuanjiao"
            android:id="@+id/button3"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp"
            android:layout_below="@+id/tx_zcsr"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/zaicishuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="再次输入"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/xinmima"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/tx_zcsr"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/bg_edittext"
            android:layout_alignTop="@+id/zaicishuru"
            android:layout_marginLeft="70dp"/>

    </RelativeLayout>

</RelativeLayout>
